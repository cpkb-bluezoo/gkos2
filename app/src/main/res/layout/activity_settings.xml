<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layouts_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layouts_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/layouts_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layouts_summary"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingBottom="16dp" />

        <!-- Language entries added dynamically by SettingsActivity -->
        <LinearLayout
            android:id="@+id/layouts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
