<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layouts_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layouts_summary"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/layout_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_en"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/layout_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_de"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/layout_fi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_fi"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/layout_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_ru"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/layout_el"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_el"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/layout_ko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_ko"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>
</ScrollView>
